        mc:Ignorable="d"
        Title="Simple A" Height="332" Width="347" WindowStartupLocation="CenterScreen" Topmost="True" Icon="/MMMiddle1.png" Closing="Window_Closing" MouseDown="Window_MouseDown" LocationChanged="Window_LocationChanged" KeyDown="Window_KeyDown" MouseMove="Window_MouseMove" Closed="Window_Closed">
