            <Label x:Name="Label_VVV" Content="算法迭代" HorizontalAlignment="Left" Margin="105,-3,0,0" VerticalAlignment="Top" Foreground="Red"/>
            <WebBrowser Margin="168,0,0,0"/>
        </Grid>
        <Grid Margin="0,20,0,0" Height="120" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300">
            <TextBox x:Name="TextBoxLeft" TextWrapping="Wrap" HorizontalAlignment="Left" Width="140"/>
            <TextBox x:Name="TextBoxRight" TextWrapping="Wrap" Grid.RowSpan="1" Grid.ColumnSpan="1" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Visible" Margin="142,0,0,0" HorizontalAlignment="Left" Width="140"/>
        </Grid>
        <Grid Margin="0,145,0,0" Height="120" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300">

        </Grid>
    </Grid>
</Window>
